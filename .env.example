# ============================================================================
# OWONA Control Panel Environment Variables
# 
# Stack: Server (173.249.2.158) → N8N Cloud → GitHub → Vercel
# ============================================================================

# N8N Cloud API Key
# Get from: https://flowkraft.app.n8n.cloud → Account Settings → API Keys
NEXT_PUBLIC_N8N_API_KEY=your_n8n_cloud_api_key

# WhatsApp Bot Builder API Key  
# Get from: https://whatsapp.owona.de → Settings → API
NEXT_PUBLIC_WHATSAPP_API_KEY=your_whatsapp_api_key

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://owonamedia.de
ALLOWED_ORIGINS=https://owonamedia.de,https://whatsapp.owona.de,http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_N8N_INTEGRATION=true
NEXT_PUBLIC_ENABLE_WHATSAPP_INTEGRATION=true
NEXT_PUBLIC_ENABLE_SERVER_MONITORING=true
NEXT_PUBLIC_ENABLE_SYNC_DASHBOARD=true
